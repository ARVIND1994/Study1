package Pattern;

import java.util.Scanner;

public class Pattern11 {

	public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        int i = 1;
        while(i<=n) {
        	int j = n;
        	char character = (char)('A' + j -1);
        	while(j<=i) {
        		System.out.print((char)(character));
        		character++;
        		j--;
        		
        	}
        	System.out.println();
        	i++;
        }
        
	}

}
